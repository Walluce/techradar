= title blip.topic.name

= render 'detail', blip: blip

- if can? :edit, blip
  %br
  %br
  = link_to 'Edit Blip', edit_radar_blip_path(blip.radar, blip), class: 'btn btn-default'

- if can? :delete, blip
  = button_to 'Delete Blip', radar_blip_path(blip.radar, blip),
                             method: :delete,
                             class: 'btn btn-danger',
                             data: { confirm: 'Are you sure?' }

%p
  %br
  This blip is from
  = link_to blip.radar.name, blip.radar

